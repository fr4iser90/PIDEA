{
  "feature": "pidea-agent-branch",
  "version: '1.0.3'",
  "deployment_date": "2024-12-19T10:00:00Z",
  "environment": "staging",
  "description": "PIDEA Agent Branch Management Feature Monitoring Configuration",
  
  "endpoints": [
    {
      "path": "/api/git/pidea-agent/status",
      "method": "GET",
      "expected_status": 200,
      "timeout": 5000,
      "frequency": "5m"
    },
    {
      "path": "/api/git/pidea-agent/pull",
      "method": "POST",
      "expected_status": 200,
      "timeout": 30000,
      "frequency": "15m"
    },
    {
      "path": "/api/git/pidea-agent/merge",
      "method": "POST",
      "expected_status": 200,
      "timeout": 30000,
      "frequency": "15m"
    },
    {
      "path": "/api/git/pidea-agent/compare",
      "method": "GET",
      "expected_status": 200,
      "timeout": 10000,
      "frequency": "10m"
    }
  ],
  
  "alerts": {
    "api_response_time": {
      "threshold": 500,
      "unit": "ms",
      "severity": "warning",
      "description": "API response time exceeds 500ms"
    },
    "error_rate": {
      "threshold": 5,
      "unit": "percent",
      "severity": "critical",
      "description": "Error rate exceeds 5%"
    },
    "availability": {
      "threshold": 99.9,
      "unit": "percent",
      "severity": "critical",
      "description": "Service availability below 99.9%"
    },
    "git_operation_failure": {
      "threshold": 1,
      "unit": "count",
      "severity": "warning",
      "description": "Git operation failures detected"
    },
    "database_connection": {
      "threshold": 100,
      "unit": "ms",
      "severity": "warning",
      "description": "Database connection time exceeds 100ms"
    }
  },
  
  "metrics": {
    "api_calls": {
      "type": "counter",
      "description": "Total number of API calls",
      "labels": ["endpoint", "method", "status"]
    },
    "response_time": {
      "type": "histogram",
      "description": "API response time distribution",
      "labels": ["endpoint", "method"],
      "buckets": [100, 250, 500, 1000, 2500, 5000]
    },
    "git_operations": {
      "type": "counter",
      "description": "Git operations performed",
      "labels": ["operation", "status", "branch"]
    },
    "user_interactions": {
      "type": "counter",
      "description": "User interactions with the feature",
      "labels": ["action", "component"]
    },
    "error_count": {
      "type": "counter",
      "description": "Error occurrences",
      "labels": ["type", "severity", "endpoint"]
    }
  },
  
  "health_checks": {
    "api_health": {
      "endpoint": "/api/health",
      "method": "GET",
      "expected_status": 200,
      "timeout": 5000,
      "frequency": "1m"
    },
    "database_health": {
      "endpoint": "/api/health/database",
      "method": "GET",
      "expected_status": 200,
      "timeout": 5000,
      "frequency": "2m"
    },
    "git_health": {
      "endpoint": "/api/health/git",
      "method": "GET",
      "expected_status": 200,
      "timeout": 10000,
      "frequency": "5m"
    }
  },
  
  "dashboards": {
    "overview": {
      "title": "PIDEA Agent Branch - Overview",
      "description": "High-level metrics and health status",
      "panels": [
        {
          "title": "API Response Time",
          "type": "graph",
          "metric": "response_time",
          "aggregation": "avg"
        },
        {
          "title": "Error Rate",
          "type": "graph",
          "metric": "error_count",
          "aggregation": "rate"
        },
        {
          "title": "Git Operations",
          "type": "graph",
          "metric": "git_operations",
          "aggregation": "sum"
        },
        {
          "title": "User Interactions",
          "type": "graph",
          "metric": "user_interactions",
          "aggregation": "sum"
        }
      ]
    },
    "detailed": {
      "title": "PIDEA Agent Branch - Detailed Metrics",
      "description": "Detailed performance and usage metrics",
      "panels": [
        {
          "title": "Endpoint Performance",
          "type": "table",
          "metrics": ["response_time", "api_calls", "error_count"]
        },
        {
          "title": "Git Operation Breakdown",
          "type": "pie",
          "metric": "git_operations",
          "group_by": "operation"
        },
        {
          "title": "Error Distribution",
          "type": "bar",
          "metric": "error_count",
          "group_by": "type"
        }
      ]
    }
  },
  
  "notifications": {
    "email": {
      "recipients": ["devops@pidea.dev", "backend-team@pidea.dev"],
      "severity_levels": ["critical", "warning"]
    },
    "slack": {
      "channel": "#pidea-alerts",
      "severity_levels": ["critical"]
    },
    "pagerduty": {
      "service_id": "pidea-agent-branch",
      "severity_levels": ["critical"]
    }
  },
  
  "logging": {
    "level": "info",
    "format": "json",
    "fields": [
      "timestamp",
      "level",
      "message",
      "endpoint",
      "user_id",
      "operation",
      "duration",
      "status"
    ],
    "retention": "30d"
  },
  
  "performance_baselines": {
    "api_response_time": {
      "p50": 150,
      "p95": 400,
      "p99": 800
    },
    "git_operation_time": {
      "pull": 2000,
      "merge": 3000,
      "compare": 1000
    },
    "user_interaction_time": {
      "component_load": 500,
      "operation_complete": 3000
    }
  },
  
  "maintenance": {
    "scheduled_maintenance": {
      "frequency": "monthly",
      "duration": "2h",
      "window": "02:00-04:00 UTC"
    },
    "backup_schedule": {
      "frequency": "daily",
      "retention": "7d"
    },
    "log_rotation": {
      "frequency": "daily",
      "max_size": "100MB",
      "max_files": 30
    }
  }
} 