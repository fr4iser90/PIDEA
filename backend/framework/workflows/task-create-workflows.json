{
  "workflows": {
    "task-create-workflow": {
      "name": "Task Creation Workflow",
      "description": "Complete workflow for task creation: ide_send task-create.md → confirmation → task-review → git branch → task-execute",
      "steps": [
        {
          "name": "create-file-snapshot",
          "type": "file_snapshot_step",
          "description": "Create snapshot of files before workflow starts",
          "step": "file_snapshot_step",
          "options": {
            "workspacePath": "${options.projectPath}",
            "snapshotType": "before_workflow"
          },
          "strict": true
        },
        {
          "name": "send-task-create-prompt",
          "type": "ide_send_message_step",
          "description": "Send task-create.md prompt to IDE for task planning",
          "step": "ide_send_message_step",
          "options": {
            "useTaskPrompt": true,
            "waitForResponse": true,
            "timeout": 300000,
            "sessionId": "task-create-${task.id}",
            "requestedBy": "${userId}",
            "userId": "${userId}",
            "projectId": "${options.projectId}",
            "workspacePath": "${options.projectPath}",
            "autoDetectIDE": true,
            "clickNewChat": true
          },
          "strict": true
        },
        {
          "name": "sync-task-after-create",
          "type": "task_sync_step",
          "description": "Sync task content from file using existing task system",
          "step": "task_sync_step",
          "options": {
            "taskId": "${task.id}",
            "projectId": "${options.projectId}",
            "userId": "${userId}",
            "workspacePath": "${options.projectPath}"
          },
          "strict": true,
          "condition": "previousStep.success && previousStep.result.success"
        },
        {
          "name": "new-chat-task-review",
          "type": "ide_send_message_step",
          "description": "Start new chat session with task-review.md prompt using synchronized task content",
          "step": "ide_send_message_step",
          "options": {
            "useTaskPrompt": true,
            "taskMode": "task-review",
            "waitForResponse": true,
            "timeout": 300000,
            "sessionId": "task-review-${task.id}",
            "requestedBy": "${userId}",
            "userId": "${userId}",
            "projectId": "${options.projectId}",
            "workspacePath": "${options.projectPath}",
            "autoDetectIDE": true,
            "clickNewChat": true
          },
          "strict": true
        },
        {
          "name": "sync-task-after-review",
          "type": "task_sync_step",
          "description": "Sync task content from file using existing task system",
          "step": "task_sync_step",
          "options": {
            "taskId": "${task.id}",
            "projectId": "${options.projectId}",
            "userId": "${userId}",
            "workspacePath": "${options.projectPath}"
          },
          "strict": true,
          "condition": "previousStep.success && previousStep.result.success"
        },
        {
          "name": "confirm-task-review",
          "type": "confirmation_step",
          "description": "Confirm if files are up-to-date and executable",
          "step": "confirmation_step",
          "enabled": false,
          "options": {
            "confirmationPrompt": "Are all task files up-to-date and ready for execution? Please confirm with 'yes' or 'no'",
            "timeout": 60000,
            "maxAttempts": 2,
            "sessionId": "task-review-confirmation-${task.id}",
            "requestedBy": "${userId}",
            "userId": "${userId}",
            "projectId": "${options.projectId}",
            "workspacePath": "${options.projectPath}"
          },
          "strict": false,
          "condition": "previousStep.success && previousStep.result.success"
        },
        {
          "name": "create-git-branch",
          "type": "git_create_branch",
          "description": "Create git branch with source pidea-agent",
          "step": "git_create_branch",
          "options": {
            "branchName": "task/{{task.title}}-{{timestamp}}",
            "sourceBranch": "pidea-agent",
            "createBranch": true,
            "sessionId": "git-branch-${task.id}",
            "requestedBy": "${userId}",
            "userId": "${userId}",
            "projectId": "${options.projectId}",
            "workspacePath": "${options.projectPath}"
          },
          "strict": true,
          "condition": "previousStep.success && previousStep.result.success"
        },
        {
          "name": "new-chat-task-execute",
          "type": "ide_send_message_step",
          "description": "Start new chat session with task-execute.md prompt using synchronized task content",
          "step": "ide_send_message_step",
          "options": {
            "useTaskPrompt": true,
            "taskMode": "task-execute",
            "waitForResponse": true,
            "timeout": 600000,
            "sessionId": "task-execute-${task.id}",
            "requestedBy": "${userId}",
            "userId": "${userId}",
            "projectId": "${options.projectId}",
            "workspacePath": "${options.projectPath}",
            "autoDetectIDE": true,
            "clickNewChat": true
          },
          "strict": true,
          "condition": "previousStep.success && previousStep.result.success"
        }
      ],
      "options": {
        "autoConfirm": false,
        "createBranch": true,
        "timeout": 900000,
        "enableProgressTracking": true,
        "enableErrorRecovery": true,
        "sourceBranch": "pidea-agent"
      }
    },
    "quick-task-create-workflow": {
      "name": "Quick Task Creation Workflow",
      "description": "Simplified workflow for quick task creation without extensive validation",
      "steps": [
        {
          "name": "generate-prompt",
          "type": "generate",
          "description": "Generate basic task creation prompt",
          "step": "TaskPromptGenerationStep",
          "options": {
            "useTaskCreateTemplate": true,
            "includeProjectAnalysis": false,
            "simplified": true
          }
        },
        {
          "name": "send-to-ide",
          "type": "ide_send_message",
          "description": "Send prompt to IDE",
          "step": "IDESendMessageStep",
          "options": {
            "waitForResponse": true,
            "timeout": 30000
          }
        },
        {
          "name": "auto-finish",
          "type": "completion",
          "description": "Start auto-finish workflow",
          "step": "AutoFinishStep",
          "options": {
            "maxConfirmationAttempts": 2,
            "confirmationTimeout": 5000,
            "fallbackDetectionEnabled": false
          }
        }
      ],
      "options": {
        "autoConfirm": true,
        "createBranch": false,
        "timeout": 120000
      }
    },
    "advanced-task-create-workflow": {
      "name": "Advanced Task Creation Workflow",
      "description": "Advanced workflow with comprehensive analysis and validation",
      "steps": [
        {
          "name": "project-analysis",
          "type": "analysis",
          "description": "Comprehensive project analysis before task creation",
          "step": "ProjectAnalysisStep",
          "options": {
            "analysisTypes": ["architecture", "dependencies", "code-quality", "security"],
            "includeMetrics": true,
            "generateReport": true
          }
        },
        {
          "name": "generate-prompt",
          "type": "generate",
          "description": "Generate advanced task creation prompt with analysis context",
          "step": "TaskPromptGenerationStep",
          "options": {
            "useTaskCreateTemplate": true,
            "includeProjectAnalysis": true,
            "includeArchitectureContext": true,
            "includeDependencies": true,
            "includeSecurityContext": true,
            "includePerformanceContext": true
          }
        },
        {
          "name": "create-chat",
          "type": "ide",
          "description": "Create new chat session",
          "step": "CreateChatStep",
          "options": {
            "title": "Advanced Task Creation Session",
            "metadata": {
              "workflow": "advanced-task-create",
              "autoCreated": true,
              "taskType": "advanced-creation"
            }
          }
        },
        {
          "name": "send-to-ide",
          "type": "ide_send_message",
          "description": "Send advanced prompt to IDE",
          "step": "IDESendMessageStep",
          "options": {
            "useTaskPrompt": true,
            "waitForResponse": true,
            "timeout": 90000,
            "retryOnFailure": true,
            "maxRetries": 5
          }
        },
        {
          "name": "validate-response",
          "type": "validation",
          "description": "Comprehensive response validation",
          "step": "CodeQualityAnalysisOrchestrator",
          "options": {
            "checks": ["completeness", "relevance", "structure", "security", "performance"],
            "strict": true,
            "continueOnFailure": false
          }
        },
        {
          "name": "auto-finish",
          "type": "completion",
          "description": "Start advanced auto-finish workflow",
          "step": "AutoFinishStep",
          "options": {
            "maxConfirmationAttempts": 5,
            "confirmationTimeout": 20000,
            "fallbackDetectionEnabled": true,
            "autoContinueThreshold": 0.7,
            "includeCompletionDetection": true,
            "includeAutoCommit": true,
            "includeQualityAssessment": true
          }
        },
        {
          "name": "quality-assessment",
          "type": "validation",
          "description": "Final quality assessment",
          "step": "ResponseQualityEngine",
          "options": {
            "assessmentTypes": ["code-quality", "architecture", "security", "performance"],
            "generateReport": true
          }
        },
        {
          "name": "completion-check",
          "type": "confirmation_step",
          "description": "Final completion check",
          "step": "ConfirmationStep",
          "options": {
            "maxAttempts": 3,
            "timeout": 20000,
            "autoContinueThreshold": 0.8,
            "enableMultiLanguage": true
          }
        }
      ],
      "options": {
        "autoConfirm": false,
        "createBranch": true,
        "timeout": 600000,
        "enableProgressTracking": true,
        "enableErrorRecovery": true,
        "enableQualityGates": true
      }
    }
  },
  "taskTypeMapping": {
    "feature": "standard-task-workflow",
    "bug": "standard-task-workflow", 
    "refactor": "standard-task-workflow",
    "testing": "standard-task-workflow",
    "documentation": "standard-task-workflow",
    "optimization": "standard-task-workflow",
    "security": "standard-task-workflow",
    "deployment": "standard-task-workflow",
    "manual": "standard-task-workflow",
    "default": "task-create-workflow"
  },
  "contentLibrary": {
    "prompts": {
      "task-create": "content-library/prompts/task-management/task-create.md",
      "quick-task": "content-library/prompts/task-management/task-create.md",
      "advanced-task": "content-library/prompts/task-management/task-create.md"
    },
    "templates": {
      "task-create": "content-library/templates/",
      "implementation": "content-library/prompts/development/"
    }
  }
} 